@model ElderlyCareApp.Models.CareNote

@{
    ViewData["Title"] = "Care Note Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-sticky-note"></i> Care Note Details
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Title</dt>
                                <dd class="col-sm-8">@Model.Title</dd>

                                <dt class="col-sm-4">Type</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.NoteType switch {
                                        NoteType.Health => "bg-danger",
                                        NoteType.Important => "bg-warning",
                                        NoteType.Behavior => "bg-info",
                                        NoteType.Mood => "bg-success",
                                        _ => "bg-secondary"
                                    })">
                                        @Model.NoteType
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Patient</dt>
                                <dd class="col-sm-8">@Model.ElderlyPerson.Name</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Created By</dt>
                                <dd class="col-sm-8">@Model.User.Name</dd>

                                <dt class="col-sm-4">Created</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Content))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <h6>Content</h6>
                                <p class="text-muted">@Model.Content</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 