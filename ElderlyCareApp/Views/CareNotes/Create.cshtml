@model ElderlyCareApp.Models.CareNote

@{
    ViewData["Title"] = "Add Care Note";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-plus"></i> Add Care Note
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ElderlyPersonId" class="form-label">Patient</label>
                                    <select asp-for="ElderlyPersonId" class="form-select" asp-items="ViewBag.ElderlyPersonId"></select>
                                    <span asp-validation-for="ElderlyPersonId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UserId" class="form-label">Created By</label>
                                    <select asp-for="UserId" class="form-select" asp-items="ViewBag.UserId"></select>
                                    <span asp-validation-for="UserId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="NoteType" class="form-label">Note Type</label>
                                    <select asp-for="NoteType" class="form-select" asp-items="Html.GetEnumSelectList<NoteType>()"></select>
                                    <span asp-validation-for="NoteType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">Title</label>
                                    <input asp-for="Title" class="form-control" placeholder="Brief title for the note" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label">Content</label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Detailed note content..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-plus"></i> Create Care Note
                            </button>
                            <a href="#" onclick="returnToPatientDashboard()" class="btn btn-info">
                                <i class="fas fa-user"></i> Return to Patient Dashboard
                            </a>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function returnToPatientDashboard() {
            var patientId = document.getElementById('ElderlyPersonId').value;
            if (patientId) {
                window.location.href = '@Url.Action("PatientDashboard", "Home")?patientId=' + patientId;
            } else {
                // Fallback to index if no patient ID
                window.location.href = '@Url.Action("Index", "Home")';
            }
            return false;
        }
    </script>
} 