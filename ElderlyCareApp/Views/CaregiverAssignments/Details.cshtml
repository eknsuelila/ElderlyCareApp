@model ElderlyCareApp.Models.CaregiverAssignment

@{
    ViewData["Title"] = "Assignment Details";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-user-plus fa-2x text-primary me-3"></i>
                        <div>
                            <h4 class="mb-0">Caregiver Assignment Details</h4>
                            <p class="text-muted mb-0">View assignment information</p>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-primary mb-3">
                                <div class="card-header bg-primary text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-user-md me-2"></i>Caregiver Information
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="avatar-lg bg-primary rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <span class="text-white fw-bold fs-4">@Model.Caregiver.Name.Substring(0, 1).ToUpper()</span>
                                        </div>
                                        <div>
                                            <h5 class="mb-1">@Model.Caregiver.Name</h5>
                                            <p class="text-muted mb-0">@Model.Caregiver.Email</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">Phone</small>
                                            <p class="mb-0">@(Model.Caregiver.PhoneNumber ?? "Not provided")</p>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Role</small>
                                            <p class="mb-0">
                                                <span class="badge bg-primary">@Model.Caregiver.Role</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-info mb-3">
                                <div class="card-header bg-info text-white">
                                    <h6 class="mb-0">
                                        <i class="fas fa-user me-2"></i>Patient Information
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="avatar-lg bg-info rounded-circle d-flex align-items-center justify-content-center me-3">
                                            <span class="text-white fw-bold fs-4">@Model.ElderlyPerson.Name.Substring(0, 1).ToUpper()</span>
                                        </div>
                                        <div>
                                            <h5 class="mb-1">@Model.ElderlyPerson.Name</h5>
                                            <p class="text-muted mb-0">@Model.ElderlyPerson.DateOfBirth.ToString("MMM dd, yyyy")</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <small class="text-muted">Phone</small>
                                            <p class="mb-0">@(Model.ElderlyPerson.PhoneNumber ?? "Not provided")</p>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Age</small>
                                            <p class="mb-0">@(DateTime.Now.Year - Model.ElderlyPerson.DateOfBirth.Year) years</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card border-secondary mb-3">
                        <div class="card-header bg-secondary text-white">
                            <h6 class="mb-0">
                                <i class="fas fa-calendar-alt me-2"></i>Assignment Details
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <small class="text-muted">Start Date</small>
                                    <p class="mb-0">
                                        <span class="badge bg-success fs-6">@Model.StartDate.ToString("MMM dd, yyyy")</span>
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">End Date</small>
                                    <p class="mb-0">
                                        @if (Model.EndDate.HasValue)
                                        {
                                            <span class="badge bg-warning fs-6">@Model.EndDate.Value.ToString("MMM dd, yyyy")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info fs-6">Ongoing</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">Status</small>
                                    <p class="mb-0">
                                        @if (Model.IsActive)
                                        {
                                            <span class="badge bg-success fs-6">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary fs-6">Inactive</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-3">
                                    <small class="text-muted">Created</small>
                                    <p class="mb-0">
                                        <span class="badge bg-dark fs-6">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </p>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <div class="mt-3">
                                    <small class="text-muted">Notes</small>
                                    <div class="alert alert-light">
                                        <i class="fas fa-sticky-note me-2 text-muted"></i>
                                        @Model.Notes
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Assignment Impact:</strong> 
                        @if (Model.IsActive)
                        {
                            <span>This caregiver can currently view and manage care records for @Model.ElderlyPerson.Name.</span>
                        }
                        else
                        {
                            <span>This assignment is inactive. The caregiver cannot access @Model.ElderlyPerson.Name's care records.</span>
                        }
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                                <i class="fas fa-edit me-2"></i>Edit Assignment
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Delete Assignment
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-lg {
        width: 60px;
        height: 60px;
    }
</style>
