@model ElderlyCareApp.Models.MealLog

@{
    ViewData["Title"] = "Meal Details";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-utensils"></i> Meal Details
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Patient</dt>
                                <dd class="col-sm-8">@Model.ElderlyPerson?.Name</dd>

                                <dt class="col-sm-4">Logged By</dt>
                                <dd class="col-sm-8">@Model.User?.Name</dd>

                                <dt class="col-sm-4">Meal Type</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var mealTypeClass = Model.MealType switch
                                        {
                                            MealType.Breakfast => "bg-warning",
                                            MealType.Lunch => "bg-info",
                                            MealType.Dinner => "bg-primary",
                                            MealType.Snack => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @mealTypeClass">@Model.MealType</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">Meal Name</dt>
                                <dd class="col-sm-8">@(Model.MealName ?? "Not specified")</dd>

                                <dt class="col-sm-4">Meal Time</dt>
                                <dd class="col-sm-8">
                                    <i class="fas fa-clock text-muted"></i>
                                    @Model.MealTime.ToString("MMM dd, yyyy HH:mm")
                                </dd>

                                <dt class="col-sm-4">Created</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <h6>Description</h6>
                                <p class="text-muted">@Model.Description</p>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <h6>Notes</h6>
                                <p class="text-muted">@Model.Notes</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
