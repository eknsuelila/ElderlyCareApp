@model IEnumerable<ElderlyCareApp.Models.MealLog>

@{
    ViewData["Title"] = "Meal Logs";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="fas fa-utensils text-success"></i> Meal Logs</h1>
            <p class="text-muted">Track daily meals and nutrition for elderly patients</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Add Meal Log
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Patient</th>
                            <th>Meal Type</th>
                            <th>Meal Name</th>
                            <th>Description</th>
                            <th>Meal Time</th>
                            <th>Logged By</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@item.ElderlyPerson?.Name</strong>
                                </td>
                                <td>
                                    @{
                                        var mealTypeClass = item.MealType switch
                                        {
                                            MealType.Breakfast => "bg-warning",
                                            MealType.Lunch => "bg-info",
                                            MealType.Dinner => "bg-primary",
                                            MealType.Snack => "bg-secondary",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @mealTypeClass">@item.MealType</span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.MealName))
                                    {
                                        <strong>@item.MealName</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <span title="@item.Description">
                                            @(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <i class="fas fa-clock text-muted"></i>
                                    @item.MealTime.ToString("MMM dd, HH:mm")
                                </td>
                                <td>@item.User?.Name</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No Meal Logs Found</h3>
        <p class="text-muted">Start by logging the first meal.</p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Log First Meal
        </a>
    </div>
}
