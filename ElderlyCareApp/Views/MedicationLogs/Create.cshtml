@model ElderlyCareApp.Models.MedicationLog

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MedicationLog</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ElderlyPersonId" class="control-label">Elderly Person</label>
                <select asp-for="ElderlyPersonId" class="form-control" asp-items="ViewBag.ElderlyPersonId"></select>
                <span asp-validation-for="ElderlyPersonId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Caregiver</label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="MedicationName" class="control-label">Medication Name</label>
                <input asp-for="MedicationName" class="form-control" />
                <span asp-validation-for="MedicationName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Dosage" class="control-label">Dosage</label>
                <input asp-for="Dosage" class="form-control" />
                <span asp-validation-for="Dosage" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Frequency" class="control-label">Frequency</label>
                <input asp-for="Frequency" class="form-control" placeholder="e.g., Twice daily, Every 8 hours" />
                <span asp-validation-for="Frequency" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Route" class="control-label">Route</label>
                <select asp-for="Route" class="form-control">
                    <option value="">Select Route</option>
                    <option value="Oral">Oral</option>
                    <option value="Topical">Topical</option>
                    <option value="Injection">Injection</option>
                    <option value="Inhalation">Inhalation</option>
                    <option value="Sublingual">Sublingual</option>
                </select>
                <span asp-validation-for="Route" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PrescribedBy" class="control-label">Prescribed By</label>
                <input asp-for="PrescribedBy" class="form-control" />
                <span asp-validation-for="PrescribedBy" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PrescriptionDate" class="control-label">Prescription Date</label>
                <input asp-for="PrescriptionDate" class="form-control" type="date" />
                <span asp-validation-for="PrescriptionDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ExpiryDate" class="control-label">Expiry Date</label>
                <input asp-for="ExpiryDate" class="form-control" type="date" />
                <span asp-validation-for="ExpiryDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Pharmacy" class="control-label">Pharmacy</label>
                <input asp-for="Pharmacy" class="form-control" />
                <span asp-validation-for="Pharmacy" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="PharmacyPhone" class="control-label">Pharmacy Phone</label>
                <input asp-for="PharmacyPhone" class="form-control" />
                <span asp-validation-for="PharmacyPhone" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Instructions" class="control-label">Instructions</label>
                <textarea asp-for="Instructions" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Instructions" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<MedicationStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ScheduledTime" class="control-label">Scheduled Time</label>
                <input asp-for="ScheduledTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="ScheduledTime" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ActualTime" class="control-label">Actual Time Taken</label>
                <input asp-for="ActualTime" class="form-control" type="datetime-local" />
                <span asp-validation-for="ActualTime" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SideEffects" class="control-label">Side Effects</label>
                <textarea asp-for="SideEffects" class="form-control" rows="3"></textarea>
                <span asp-validation-for="SideEffects" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Interactions" class="control-label">Drug Interactions</label>
                <textarea asp-for="Interactions" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Interactions" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Notes" class="control-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RequiresRefill" /> @Html.DisplayNameFor(model => model.RequiresRefill)
                </label>
            </div>
            
            <div class="form-group">
                <label asp-for="RefillReminderDate" class="control-label">Refill Reminder Date</label>
                <input asp-for="RefillReminderDate" class="form-control" type="date" />
                <span asp-validation-for="RefillReminderDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
