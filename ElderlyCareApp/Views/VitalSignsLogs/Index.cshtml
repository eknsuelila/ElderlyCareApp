@model IEnumerable<ElderlyCareApp.Models.VitalSignsLog>

@{
    ViewData["Title"] = "Vital Signs";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1><i class="fas fa-stethoscope"></i> Vital Signs</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Record Vital Signs
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <i class="fas fa-user"></i> Patient
                            </th>
                            <th>
                                <i class="fas fa-heartbeat"></i> Blood Pressure
                            </th>
                            <th>
                                <i class="fas fa-heart"></i> Heart Rate
                            </th>
                            <th>
                                <i class="fas fa-thermometer-half"></i> Temperature
                            </th>
                            <th>
                                <i class="fas fa-lungs"></i> Respiratory Rate
                            </th>
                            <th>
                                <i class="fas fa-tint"></i> Oxygen Saturation
                            </th>
                            <th>
                                <i class="fas fa-clock"></i> Measured At
                            </th>
                            <th>
                                <i class="fas fa-cogs"></i> Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.ElderlyPerson.Name)</strong>
                                </td>
                                <td>
                                    @if (item.SystolicPressure.HasValue && item.DiastolicPressure.HasValue)
                                    {
                                        <span class="badge bg-info">@item.SystolicPressure/@item.DiastolicPressure mmHg</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not recorded</span>
                                    }
                                </td>
                                <td>
                                    @if (item.HeartRate.HasValue)
                                    {
                                        string hrClass;
                                        if (item.HeartRate < 60)
                                            hrClass = "bg-warning";
                                        else if (item.HeartRate >= 60 && item.HeartRate <= 100)
                                            hrClass = "bg-success";
                                        else
                                            hrClass = "bg-danger";
                                        
                                        <span class="badge @hrClass">@item.HeartRate bpm</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not recorded</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Temperature.HasValue)
                                    {
                                        string tempClass;
                                        if (item.Temperature < 36.1m)
                                            tempClass = "bg-info";
                                        else if (item.Temperature >= 36.1m && item.Temperature <= 37.2m)
                                            tempClass = "bg-success";
                                        else
                                            tempClass = "bg-warning";
                                        
                                        <span class="badge @tempClass">@item.TemperatureÂ°C</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not recorded</span>
                                    }
                                </td>
                                <td>
                                    @if (item.RespiratoryRate.HasValue)
                                    {
                                        string rrClass;
                                        if (item.RespiratoryRate < 12)
                                            rrClass = "bg-warning";
                                        else if (item.RespiratoryRate >= 12 && item.RespiratoryRate <= 20)
                                            rrClass = "bg-success";
                                        else
                                            rrClass = "bg-danger";
                                        
                                        <span class="badge @rrClass">@item.RespiratoryRate/min</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not recorded</span>
                                    }
                                </td>
                                <td>
                                    @if (item.OxygenSaturation.HasValue)
                                    {
                                        string o2Class;
                                        if (item.OxygenSaturation < 95)
                                            o2Class = "bg-danger";
                                        else
                                            o2Class = "bg-success";
                                        
                                        <span class="badge @o2Class">@item.OxygenSaturation%</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not recorded</span>
                                    }
                                </td>
                                <td>
                                    @item.MeasurementTime.ToString("MMM dd, HH:mm")
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <i class="fas fa-stethoscope fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No Vital Signs Records Found</h3>
        <p class="text-muted">Start by recording the first vital signs measurement.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Record First Vital Signs
        </a>
    </div>
} 