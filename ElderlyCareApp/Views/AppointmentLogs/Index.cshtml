@model IEnumerable<ElderlyCareApp.Models.AppointmentLog>

@{
    ViewData["Title"] = "Appointments";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1><i class="fas fa-calendar-check"></i> Appointments</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Schedule Appointment
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <i class="fas fa-calendar"></i> Appointment
                            </th>
                            <th>
                                <i class="fas fa-user"></i> Patient
                            </th>
                            <th>
                                <i class="fas fa-user-md"></i> Provider
                            </th>
                            <th>
                                <i class="fas fa-clock"></i> Date & Time
                            </th>
                            <th>
                                <i class="fas fa-map-marker-alt"></i> Location
                            </th>
                            <th>
                                <i class="fas fa-info-circle"></i> Status
                            </th>
                            <th>
                                <i class="fas fa-cogs"></i> Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                                    <br /><small class="text-muted">@item.AppointmentType</small>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ElderlyPerson.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ProviderName)
                                </td>
                                <td>
                                    @item.ScheduledDateTime.ToString("MMM dd, yyyy HH:mm")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Location)
                                </td>
                                <td>
                                    @{
                                        string statusClass;
                                        switch (item.Status)
                                        {
                                            case ElderlyCareApp.Models.AppointmentStatus.Completed:
                                                statusClass = "bg-success";
                                                break;
                                            case ElderlyCareApp.Models.AppointmentStatus.InProgress:
                                                statusClass = "bg-warning";
                                                break;
                                            case ElderlyCareApp.Models.AppointmentStatus.Scheduled:
                                                statusClass = "bg-info";
                                                break;
                                            case ElderlyCareApp.Models.AppointmentStatus.Confirmed:
                                                statusClass = "bg-primary";
                                                break;
                                            case ElderlyCareApp.Models.AppointmentStatus.Cancelled:
                                                statusClass = "bg-danger";
                                                break;
                                            case ElderlyCareApp.Models.AppointmentStatus.NoShow:
                                                statusClass = "bg-secondary";
                                                break;
                                            case ElderlyCareApp.Models.AppointmentStatus.Rescheduled:
                                                statusClass = "bg-warning";
                                                break;
                                            default:
                                                statusClass = "bg-secondary";
                                                break;
                                        }
                                    }
                                    <span class="badge @statusClass">@item.Status</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <i class="fas fa-calendar-check fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No Appointments Found</h3>
        <p class="text-muted">Start by scheduling the first appointment.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Schedule First Appointment
        </a>
    </div>
} 