@model ElderlyCareApp.Models.ElderlyPerson

@{
    ViewData["Title"] = "Delete Patient";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="fas fa-user-times text-danger"></i> Delete Patient</h1>
            <p class="text-muted">Remove patient from the system</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-eye"></i> View Details
            </a>
            <a href="#" onclick="returnToPatientDashboard()" class="btn btn-success">
                <i class="fas fa-tachometer-alt"></i> Return to Patient Dashboard
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h6 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> Warning!</h6>
                        <p class="mb-0">You are about to delete the patient <strong>@Model.Name</strong>. This action cannot be undone.</p>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Full Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>
                                
                                <dt class="col-sm-4 fw-bold">Date of Birth:</dt>
                                <dd class="col-sm-8">@Model.DateOfBirth.ToString("MMM dd, yyyy")</dd>
                                
                                <dt class="col-sm-4 fw-bold">Age:</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var age = DateTime.Now.Year - Model.DateOfBirth.Year;
                                        if (Model.DateOfBirth > DateTime.Now.AddYears(-age)) age--;
                                    }
                                    @age years old
                                </dd>
                                
                                <dt class="col-sm-4 fw-bold">Phone Number:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        @Model.PhoneNumber
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Emergency Contact:</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.EmergencyContactName))
                                    {
                                        <div>@Model.EmergencyContactName</div>
                                        <small class="text-muted">@Model.EmergencyContactPhone</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-4 fw-bold">Status:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") fs-6">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </dd>
                                
                                <dt class="col-sm-4 fw-bold">Created:</dt>
                                <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                                
                                <dt class="col-sm-4 fw-bold">Patient ID:</dt>
                                <dd class="col-sm-8">
                                    <span class="text-muted">#@Model.Id</span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                    
                    <hr>
                    
                    <div class="row">
                        <div class="col-12">
                            <dl class="row">
                                <dt class="col-sm-2 fw-bold">Allergies:</dt>
                                <dd class="col-sm-10">
                                    @if (!string.IsNullOrEmpty(Model.Allergies))
                                    {
                                        @Model.Allergies
                                    }
                                    else
                                    {
                                        <span class="text-muted">None reported</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-2 fw-bold">Medical Conditions:</dt>
                                <dd class="col-sm-10">
                                    @if (!string.IsNullOrEmpty(Model.MedicalConditions))
                                    {
                                        @Model.MedicalConditions
                                    }
                                    else
                                    {
                                        <span class="text-muted">None reported</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-2 fw-bold">Notes:</dt>
                                <dd class="col-sm-10">
                                    @if (!string.IsNullOrEmpty(Model.Notes))
                                    {
                                        @Model.Notes
                                    }
                                    else
                                    {
                                        <span class="text-muted">No additional notes</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer bg-light">
                    <form asp-action="Delete" method="post" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                    </form>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a href="#" onclick="returnToPatientDashboard()" class="btn btn-success">
                        <i class="fas fa-tachometer-alt"></i> Return to Patient Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function returnToPatientDashboard() {
            // Get the patient ID from the current page
            const patientId = @Model.Id;
            if (patientId) {
                window.location.href = '/Home/PatientDashboard?patientId=' + patientId;
            } else {
                window.location.href = '/Home/Index';
            }
        }
    </script>
}
