@model ElderlyCareApp.Models.ElderlyPerson

@{
    ViewData["Title"] = "Add New Patient";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="fas fa-user-plus text-primary"></i> Add New Patient</h1>
            <p class="text-muted">Add a new elderly patient to the care system</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="#" onclick="returnToPatientDashboard()" class="btn btn-success">
                <i class="fas fa-tachometer-alt"></i> Return to Patient Dashboard
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-user-plus"></i> Add New Patient</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        <!-- Personal Information -->
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-user"></i> Personal Information
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label fw-bold">Full Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter full name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DateOfBirth" class="form-label fw-bold">Date of Birth</label>
                                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number (optional)" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="IsActive" class="form-label fw-bold">Status</label>
                                    <div class="form-check form-switch">
                                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                        <label asp-for="IsActive" class="form-check-label">Active Patient</label>
                                    </div>
                                    <span asp-validation-for="IsActive" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Emergency Contact -->
                        <h5 class="text-primary mb-3 mt-4">
                            <i class="fas fa-phone"></i> Emergency Contact
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EmergencyContactName" class="form-label fw-bold">Emergency Contact Name</label>
                                    <input asp-for="EmergencyContactName" class="form-control" placeholder="Enter emergency contact name (optional)" />
                                    <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EmergencyContactPhone" class="form-label fw-bold">Emergency Contact Phone</label>
                                    <input asp-for="EmergencyContactPhone" class="form-control" placeholder="Enter emergency contact phone (optional)" />
                                    <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Medical Information -->
                        <h5 class="text-primary mb-3 mt-4">
                            <i class="fas fa-heartbeat"></i> Medical Information
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Allergies" class="form-label fw-bold">Allergies</label>
                                    <textarea asp-for="Allergies" class="form-control" rows="3" placeholder="List any allergies (optional)"></textarea>
                                    <span asp-validation-for="Allergies" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MedicalConditions" class="form-label fw-bold">Medical Conditions</label>
                                    <textarea asp-for="MedicalConditions" class="form-control" rows="3" placeholder="List any medical conditions (optional)"></textarea>
                                    <span asp-validation-for="MedicalConditions" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Notes -->
                        <h5 class="text-primary mb-3 mt-4">
                            <i class="fas fa-sticky-note"></i> Additional Notes
                        </h5>
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label fw-bold">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Any additional information about the patient (optional)"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="card-footer bg-light">
                            <div class="d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Create Patient
                                </button>
                                <a href="#" onclick="returnToPatientDashboard()" class="btn btn-success">
                                    <i class="fas fa-tachometer-alt"></i> Return to Patient Dashboard
                                </a>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function returnToPatientDashboard() {
            // For new patients, redirect to patient selection
            window.location.href = '@Url.Action("PatientSelection", "Home")';
        }
    </script>
}
