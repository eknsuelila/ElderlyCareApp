@model ElderlyCareApp.Models.ElderlyPerson

@{
    ViewData["Title"] = "Add New Patient";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus"></i> Add New Patient
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <!-- Personal Information -->
                        <h5 class="text-primary mb-3">
                            <i class="fas fa-user"></i> Personal Information
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Name" class="form-label">Full Name</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                    <input asp-for="DateOfBirth" class="form-control" type="date" />
                                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Emergency Contact -->
                        <h5 class="text-primary mb-3 mt-4">
                            <i class="fas fa-phone"></i> Emergency Contact
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EmergencyContactName" class="form-label">Emergency Contact Name</label>
                                    <input asp-for="EmergencyContactName" class="form-control" />
                                    <span asp-validation-for="EmergencyContactName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="EmergencyContactPhone" class="form-label">Emergency Contact Phone</label>
                                    <input asp-for="EmergencyContactPhone" class="form-control" />
                                    <span asp-validation-for="EmergencyContactPhone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Medical Information -->
                        <h5 class="text-primary mb-3 mt-4">
                            <i class="fas fa-heartbeat"></i> Medical Information
                        </h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Allergies" class="form-label">Allergies</label>
                                    <textarea asp-for="Allergies" class="form-control" rows="3" placeholder="List any allergies..."></textarea>
                                    <span asp-validation-for="Allergies" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="MedicalConditions" class="form-label">Medical Conditions</label>
                                    <textarea asp-for="MedicalConditions" class="form-control" rows="3" placeholder="List any medical conditions..."></textarea>
                                    <span asp-validation-for="MedicalConditions" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Notes -->
                        <h5 class="text-primary mb-3 mt-4">
                            <i class="fas fa-sticky-note"></i> Additional Notes
                        </h5>
                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Any additional information about the patient..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Patient
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
