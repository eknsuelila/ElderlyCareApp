@model ElderlyCareApp.Models.ElderlyPerson

@{
    ViewData["Title"] = "Patient Details";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="fas fa-user text-primary"></i> Patient Details</h1>
            <p class="text-muted">View detailed information about the patient</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit Patient
            </a>
            <a href="#" onclick="returnToPatientDashboard()" class="btn btn-success">
                <i class="fas fa-tachometer-alt"></i> Return to Patient Dashboard
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-user"></i> Patient Details</h4>
                </div>
                <div class="card-body">
                    <!-- Personal Information -->
                    <h5 class="text-primary mb-3">
                        <i class="fas fa-user"></i> Personal Information
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Name</dt>
                                <dd class="col-sm-8">@Model.Name</dd>

                                <dt class="col-sm-4 fw-bold">Date of Birth</dt>
                                <dd class="col-sm-8">@Model.DateOfBirth.ToString("MMM dd, yyyy")</dd>

                                <dt class="col-sm-4 fw-bold">Age</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var age = DateTime.Now.Year - Model.DateOfBirth.Year;
                                        if (Model.DateOfBirth > DateTime.Now.AddYears(-age)) age--;
                                    }
                                    @age years old
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Phone Number</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                    {
                                        <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                            <i class="fas fa-phone"></i> @Model.PhoneNumber
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>

                                <dt class="col-sm-4 fw-bold">Status</dt>
                                <dd class="col-sm-8">
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") fs-6">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </span>
                                </dd>
                                
                                <dt class="col-sm-4 fw-bold">Created</dt>
                                <dd class="col-sm-8">
                                    <span class="text-muted">
                                        <i class="fas fa-calendar-plus"></i> @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Emergency Contact -->
                    <h5 class="text-primary mb-3 mt-4">
                        <i class="fas fa-phone"></i> Emergency Contact
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Contact Name</dt>
                                <dd class="col-sm-8">@(Model.EmergencyContactName ?? "Not provided")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Contact Phone</dt>
                                <dd class="col-sm-8">
                                    @if (!string.IsNullOrEmpty(Model.EmergencyContactPhone))
                                    {
                                        <a href="tel:@Model.EmergencyContactPhone" class="text-decoration-none">
                                            <i class="fas fa-phone"></i> @Model.EmergencyContactPhone
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Medical Information -->
                    <h5 class="text-primary mb-3 mt-4">
                        <i class="fas fa-heartbeat"></i> Medical Information
                    </h5>
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Allergies</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.Allergies) ? "None reported" : Model.Allergies)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4 fw-bold">Medical Conditions</dt>
                                <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.MedicalConditions) ? "None reported" : Model.MedicalConditions)</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Additional Notes -->
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <h5 class="text-primary mb-3 mt-4">
                            <i class="fas fa-sticky-note"></i> Additional Notes
                        </h5>
                        <div class="row">
                            <div class="col-12">
                                <p class="text-muted">@Model.Notes</p>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer bg-light">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Edit Patient
                        </a>
                        <a href="#" onclick="returnToPatientDashboard()" class="btn btn-success">
                            <i class="fas fa-tachometer-alt"></i> Return to Patient Dashboard
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function returnToPatientDashboard() {
            // Get the patient ID from the current page
            const patientId = @Model.Id;
            if (patientId) {
                window.location.href = '/Home/PatientDashboard?patientId=' + patientId;
            } else {
                window.location.href = '/Home/Index';
            }
        }
    </script>
}
