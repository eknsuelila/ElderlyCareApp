    <script>
        function getAIInsights() {
            const patientId = @Model.Patient.Id;
            
            // Show loading state
            document.getElementById('aiWelcome').style.display = 'none';
            document.getElementById('aiInsights').style.display = 'none';
            document.getElementById('aiError').style.display = 'none';
            document.getElementById('aiLoading').style.display = 'block';
            
            fetch(`/Home/GetAIInsights?patientId=${patientId}`)
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP error! status: ${response.status}`);
                    }
                    return response.text(); // Get response as text instead of JSON
                })
                .then(responseText => {
                    console.log('Raw AI Response:', responseText); // Debug log
                    
                    document.getElementById('aiLoading').style.display = 'none';
                    
                    try {
                        // Try to parse as JSON first
                        const data = JSON.parse(responseText);
                        
                        if (data.success) {
                            // Use the second response if available, otherwise use the first
                            let selectedResponse = '';
                            
                            if (data.responseInfo && data.responseInfo.secondResponse) {
                                selectedResponse = data.responseInfo.secondResponse;
                                console.log('Using second AI response:', selectedResponse);
                            } else if (data.responseInfo && data.responseInfo.firstResponse) {
                                selectedResponse = data.responseInfo.firstResponse;
                                console.log('Using first AI response (fallback):', selectedResponse);
                            } else if (data.insights && data.insights.length > 0) {
                                // Fallback to old format
                                selectedResponse = data.insights.join('\n\n');
                                console.log('Using combined insights (legacy):', selectedResponse);
                            }
                            
                            document.getElementById('aiContent').innerHTML = formatAIResponse(selectedResponse);
                            document.getElementById('aiInsights').style.display = 'block';
                        } else {
                            document.getElementById('aiError').style.display = 'block';
                        }
                    } catch (jsonError) {
                        // If JSON parsing fails, treat the response as plain text
                        console.log('Response is not JSON, treating as plain text');
                        document.getElementById('aiContent').innerHTML = formatAIResponse(responseText);
                        document.getElementById('aiInsights').style.display = 'block';
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('aiLoading').style.display = 'none';
                    document.getElementById('aiError').style.display = 'block';
                });
        }

        function showAIChat() {
            // This will open a modal or redirect to a chat interface
            alert('AI Chat feature coming soon! This will allow direct conversation with the AI assistant.');
        }

        function formatAIResponse(response) {
            console.log('Formatting response:', response); // Debug log
            
            // Check if this is the new format with ### sections
            const hasNewFormat = response.includes('###') && response.includes('Based on the information provided');
            
            if (hasNewFormat) {
                return formatNewAIResponse(response);
            }
            
            // Extract Health Insights section (everything before "### Conclusion")
            const healthInsightsMatch = response.match(/(Health Insights for.*?)(?=### Conclusion|$)/s);
            const conclusionMatch = response.match(/(### Concerns.*?)$/s);
            
            let formattedHTML = '';
            
            // Format Health Insights Section (Assessment)
            if (healthInsightsMatch) {
                formattedHTML += formatHealthInsightsSection(healthInsightsMatch[1]);
            }
            
            // Format Conclusion Section
            if (conclusionMatch) {
                formattedHTML += formatConclusionSection(conclusionMatch[1]);
            }
            
            // If no specific sections found, try to find any structured content
            if (!healthInsightsMatch && !conclusionMatch) {
                const hasConcerns = response.match(/\d+\.\s*Concern:/);
                const hasRecommendations = response.match(/Recommendation:/);
                
                if (hasConcerns || hasRecommendations) {
                    formattedHTML = `
                        <div class="card mb-4 border-primary">
                            <div class="card-header bg-primary text-white">
                                <h6 class="mb-0"><i class="fas fa-stethoscope me-2"></i>Health Assessment</h6>
                            </div>
                            <div class="card-body">
                                <div class="ai-text-content">${formatHealthInsightsContent(response)}</div>
                            </div>
                        </div>
                    `;
                } else {
                    // Fallback to general content
                    formattedHTML = `
                        <div class="card mb-4 border-info">
                            <div class="card-header bg-info text-white">
                                <h6 class="mb-0"><i class="fas fa-robot me-2"></i>AI Assessment</h6>
                            </div>
                            <div class="card-body">
                                <div class="ai-text-content">${formatTextContent(response)}</div>
                            </div>
                        </div>
                    `;
                }
            }
            
            return formattedHTML;
        }

        function formatNewAIResponse(response) {
            // Split the response into parts: introduction, sections, and conclusion
            const lines = response.split('\n');
            let introduction = '';
            let sections = [];
            let conclusion = '';
            let currentSection = null;
            let currentSectionContent = '';
            let inConclusion = false;
            
            for (let i = 0; i < lines.length; i++) {
                const line = lines[i].trim();
                
                // Check if this is a section header (starts with ###)
                if (line.startsWith('###')) {
                    // Save previous section if exists
                    if (currentSection) {
                        sections.push({
                            title: currentSection,
                            content: currentSectionContent.trim()
                        });
                    }
                    
                    // Start new section
                    currentSection = line.replace(/^###\s*/, '');
                    currentSectionContent = '';
                }
                // Check if we're in the conclusion part (look for conclusion keywords)
                else if (line.toLowerCase().includes('conclusion') || 
                         line.toLowerCase().includes('summary') || 
                         line.toLowerCase().includes('final thoughts')) {
                    inConclusion = true;
                    conclusion += line + '\n';
                }
                // If we have a current section, add to its content
                else if (currentSection && !inConclusion) {
                    currentSectionContent += line + '\n';
                }
                // If we're in conclusion, add to conclusion
                else if (inConclusion) {
                    conclusion += line + '\n';
                }
                // If we don't have a section yet, this is introduction
                else if (!currentSection && !inConclusion) {
                    introduction += line + '\n';
                }
            }
            
            // Add the last section if exists
            if (currentSection) {
                sections.push({
                    title: currentSection,
                    content: currentSectionContent.trim()
                });
            }
            
            let formattedHTML = '';
            
            // Format Introduction
            if (introduction.trim()) {
                formattedHTML += `
                    <div class="card mb-4 border-info">
                        <div class="card-header bg-info text-white">
                            <h6 class="mb-0"><i class="fas fa-info-circle me-2"></i>Introduction</h6>
                        </div>
                        <div class="card-body">
                            <div class="ai-text-content">${formatTextContent(introduction.trim())}</div>
                        </div>
                    </div>
                `;
            }
            
            // Format Sections
            sections.forEach((section, index) => {
                formattedHTML += `
                    <div class="card mb-4 border-primary">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0"><i class="fas fa-list-alt me-2"></i>${section.title}</h6>
                        </div>
                        <div class="card-body">
                            <div class="ai-text-content">${formatTextContent(section.content)}</div>
                        </div>
                    </div>
                `;
            });
            
            // Format Conclusion
            if (conclusion.trim()) {
                formattedHTML += `
                    <div class="card mb-4 border-success">
                        <div class="card-header bg-success text-white">
                            <h6 class="mb-0"><i class="fas fa-check-circle me-2"></i>Conclusion</h6>
                        </div>
                        <div class="card-body">
                            <div class="ai-text-content">${formatTextContent(conclusion.trim())}</div>
                        </div>
                    </div>
                `;
            }
            
            return formattedHTML;
        }

        function formatHealthInsightsSection(section) {
            // Extract the patient name from the title
            const titleMatch = section.match(/Health Insights for (.*?)(?:\n|$)/);
            const patientName = titleMatch ? titleMatch[1] : 'Patient';
            
            // Remove the title from the content
            const content = section.replace(/Health Insights for.*?\n/, '').trim();
            
            return `
                <div class="card mb-4 border-primary">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0"><i class="fas fa-stethoscope me-2"></i>Health Insights for ${patientName}</h6>
                    </div>
                    <div class="card-body">
                        <div class="ai-text-content">${formatHealthInsightsContent(content)}</div>
                    </div>
                </div>
            `;
        }

        function formatConclusionSection(section) {
            // Extract the patient name from the title
            const titleMatch = section.match(/### Conclusion for (.*?)(?:\n|$)/);
            const patientName = titleMatch ? titleMatch[1] : 'Patient';

            // Remove the title and filter out validation content
            let content = section.replace(/### Conclusion.*?\n/, '').trim();
            
            // Filter out field validation lines
            const lines = content.split('\n');
            const filteredLines = lines.filter(line => {
                const trimmedLine = line.trim();
                return !trimmedLine.includes('Field:') && 
                       !trimmedLine.includes('Value:') && 
                       !trimmedLine.includes('Status:') &&
                       !trimmedLine.includes('VALID') &&
                       !trimmedLine.includes('INVALID') &&
                       !trimmedLine.match(/^\d+\.\s*Field:/) &&
                       !trimmedLine.match(/^\d+\.\s*Value:/) &&
                       !trimmedLine.match(/^\d+\.\s*Status:/);
            });
            
            content = filteredLines.join('\n').trim();

            return `
                <div class="card mb-4 border-success">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0"><i class="fas fa-check-circle me-2"></i>Conclusion for ${patientName}</h6>
                    </div>
                    <div class="card-body">
                        <div class="ai-text-content">${formatTextContent(content)}</div>
                    </div>
                </div>
            `;
        }

        function formatHealthInsightsContent(content) {
            // Filter out field validation content
            const lines = content.split('\n');
            const filteredLines = [];
            let skipUntilNextConcern = false;
            
            lines.forEach(line => {
                const trimmedLine = line.trim();
                
                // Skip field validation sections
                if (trimmedLine.includes('Field:') || 
                    trimmedLine.includes('Value:') || 
                    trimmedLine.includes('Status:') ||
                    trimmedLine.includes('VALID') ||
                    trimmedLine.includes('INVALID') ||
                    trimmedLine.match(/^\d+\.\s*Field:/) ||
                    trimmedLine.match(/^\d+\.\s*Value:/) ||
                    trimmedLine.match(/^\d+\.\s*Status:/)) {
                    skipUntilNextConcern = true;
                    return;
                }
                
                // If we encounter a new concern, stop skipping
                if (trimmedLine.match(/^\d+\.\s*Concern:/)) {
                    skipUntilNextConcern = false;
                }
                
                // Only add lines that are not part of field validation
                if (!skipUntilNextConcern || trimmedLine.match(/^\d+\.\s*Concern:/) || trimmedLine.startsWith('Recommendation:')) {
                    filteredLines.push(line);
                }
            });
            
            // Process the filtered content
            const concerns = [];
            let currentConcern = null;
            
            filteredLines.forEach(line => {
                const trimmedLine = line.trim();
                if (trimmedLine.match(/^\d+\.\s*Concern:/)) {
                    if (currentConcern) {
                        concerns.push(currentConcern);
                    }
                    const concernTitle = trimmedLine.replace(/^\d+\.\s*Concern:\s*/, '');
                    currentConcern = { title: concernTitle, content: '', recommendation: '' };
                } else if (trimmedLine.startsWith('Recommendation:')) {
                    if (currentConcern) {
                        currentConcern.recommendation = trimmedLine.replace('Recommendation:', '').trim();
                        concerns.push(currentConcern);
                        currentConcern = null;
                    }
                } else if (currentConcern && trimmedLine && !trimmedLine.startsWith('-')) {
                    currentConcern.content += (currentConcern.content ? '\n' : '') + trimmedLine;
                }
            });
            
            if (currentConcern) {
                concerns.push(currentConcern);
            }
            
            let formattedHTML = '';
            
            if (concerns.length > 0) {
                concerns.forEach((concern, index) => {
                    formattedHTML += `
                        <div class="minimal-insight">
                            <div class="insight-header-minimal">
                                <span class="insight-number-minimal">${index + 1}</span>
                                <span class="insight-title-minimal">${concern.title}</span>
                            </div>
                            <div class="insight-content-minimal">
                                ${formatTextContent(concern.content)}
                            </div>
                            ${concern.recommendation ? `
                                <div class="recommendation-minimal">
                                    <span class="recommendation-label">💡 Recommendation:</span>
                                    <span class="recommendation-text">${formatTextContent(concern.recommendation)}</span>
                                </div>
                            ` : ''}
                        </div>
                    `;
                });
            } else {
                // If no structured concerns, just display the filtered content
                const cleanContent = filteredLines.join('\n').trim();
                if (cleanContent) {
                    formattedHTML = `<div class="ai-text-content">${formatTextContent(cleanContent)}</div>`;
                } else {
                    formattedHTML = `<div class="ai-text-content">No health insights available.</div>`;
                }
            }
            
            return formattedHTML;
        }

        function formatTextContent(text) {
            // Convert markdown-style formatting to HTML
            return text
                .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                .replace(/\*(.*?)\*/g, '<em>$1</em>')
                .replace(/\n/g, '<br>')
                .replace(/(\d+\.\s)/g, '<br><strong>$1</strong>')
                .replace(/^<br>/, '');
        }
    </script>
