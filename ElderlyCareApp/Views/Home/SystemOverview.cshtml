@model ElderlyCareApp.Controllers.DashboardViewModel

@{
    ViewData["Title"] = "System Overview";
}

<div class="container-fluid">
    <!-- System Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1><i class="fas fa-chart-bar text-primary"></i> System Overview</h1>
            <p class="text-muted">Overall system statistics and recent activities across all patients</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Index" class="btn btn-primary">
                <i class="fas fa-user"></i> Select Patient
            </a>
        </div>
    </div>

    <!-- System Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.TotalElderlyPeople</h4>
                            <small>Total Patients</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.TotalUsers</h4>
                            <small>Care Staff</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-md fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.TotalCarePlans</h4>
                            <small>Care Plans</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clipboard-list fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="mb-0">@Model.PendingTasks</h4>
                            <small>Pending Tasks</small>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tasks fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Today's Tasks -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-day"></i> Today's Tasks
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.TodayTasks.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var task in Model.TodayTasks)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@task.Title</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-user"></i> @task.ElderlyPerson?.Name • 
                                            <i class="fas fa-clock"></i> @task.ScheduledTime.ToString("HH:mm") • 
                                            @task.User?.Name
                                        </small>
                                    </div>
                                    @{
                                        string statusClass = task.Status switch
                                        {
                                            ElderlyCareApp.Models.TaskStatus.Completed => "bg-success",
                                            ElderlyCareApp.Models.TaskStatus.InProgress => "bg-warning",
                                            ElderlyCareApp.Models.TaskStatus.Scheduled => "bg-info",
                                            ElderlyCareApp.Models.TaskStatus.Overdue => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @statusClass">@task.Status</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No tasks scheduled for today</p>
                    }
                    <div class="mt-3">
                        <a asp-controller="TaskSchedules" asp-action="Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Add Task
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Upcoming Appointments -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-check"></i> Upcoming Appointments
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingAppointments.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var appointment in Model.UpcomingAppointments)
                            {
                                <div class="list-group-item">
                                    <h6 class="mb-1">@appointment.Title</h6>
                                    <small class="text-muted">
                                        <i class="fas fa-user"></i> @appointment.ElderlyPerson?.Name • 
                                        <i class="fas fa-calendar"></i> @appointment.ScheduledDateTime.ToString("MMM dd, yyyy HH:mm") • 
                                        <i class="fas fa-user-md"></i> @appointment.ProviderName
                                    </small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No upcoming appointments</p>
                    }
                    <div class="mt-3">
                        <a asp-controller="AppointmentLogs" asp-action="Create" class="btn btn-info btn-sm">
                            <i class="fas fa-plus"></i> Schedule Appointment
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Recent Activities -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-running"></i> Recent Activities
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivityLogs.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var activity in Model.RecentActivityLogs)
                            {
                                <div class="list-group-item">
                                    <h6 class="mb-1">@activity.ActivityType</h6>
                                    <small class="text-muted">
                                        <i class="fas fa-user"></i> @activity.ElderlyPerson?.Name • 
                                        <i class="fas fa-clock"></i> @activity.StartTime.ToString("MMM dd, HH:mm")
                                    </small>
                                    @if (!string.IsNullOrEmpty(activity.Description))
                                    {
                                        <br />
                                        <small class="text-muted">@activity.Description</small>
                                    }
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No recent activities</p>
                    }
                    <div class="mt-3">
                        <a asp-controller="ActivityLogs" asp-action="Create" class="btn btn-success btn-sm">
                            <i class="fas fa-plus"></i> Log Activity
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Medications -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-pills"></i> Recent Medications
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentMedicationLogs.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var medication in Model.RecentMedicationLogs)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@medication.MedicationName</h6>
                                        <small class="text-muted">
                                            <i class="fas fa-user"></i> @medication.ElderlyPerson?.Name • 
                                            <i class="fas fa-clock"></i> @medication.ScheduledTime.ToString("MMM dd, HH:mm") • 
                                            @medication.Dosage
                                        </small>
                                    </div>
                                    @{
                                        string medStatusClass = medication.Status switch
                                        {
                                            MedicationStatus.Taken => "bg-success",
                                            MedicationStatus.Scheduled => "bg-info",
                                            MedicationStatus.Missed => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @medStatusClass">@medication.Status</span>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No recent medications</p>
                    }
                    <div class="mt-3">
                        <a asp-controller="MedicationLogs" asp-action="Create" class="btn btn-warning btn-sm">
                            <i class="fas fa-plus"></i> Log Medication
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 mb-2">
                            <a asp-controller="ElderlyPeople" asp-action="Create" class="btn btn-outline-primary w-100">
                                <i class="fas fa-user-plus"></i><br />Add Patient
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a asp-controller="Users" asp-action="Create" class="btn btn-outline-success w-100">
                                <i class="fas fa-user-md"></i><br />Add Staff
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a asp-controller="CarePlans" asp-action="Create" class="btn btn-outline-info w-100">
                                <i class="fas fa-clipboard"></i><br />Create Care Plan
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a asp-controller="TaskSchedules" asp-action="Create" class="btn btn-outline-warning w-100">
                                <i class="fas fa-tasks"></i><br />Schedule Task
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a asp-controller="AppointmentLogs" asp-action="Create" class="btn btn-outline-secondary w-100">
                                <i class="fas fa-calendar"></i><br />Book Appointment
                            </a>
                        </div>
                        <div class="col-md-2 mb-2">
                            <a asp-controller="VitalSignsLogs" asp-action="Create" class="btn btn-outline-danger w-100">
                                <i class="fas fa-heartbeat"></i><br />Record Vitals
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 