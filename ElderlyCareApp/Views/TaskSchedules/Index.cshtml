@model IEnumerable<ElderlyCareApp.Models.TaskSchedule>

@{
    ViewData["Title"] = "Task Schedules";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1><i class="fas fa-tasks"></i> Task Schedules</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Task
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <i class="fas fa-tasks"></i> Task
                            </th>
                            <th>
                                <i class="fas fa-user"></i> Elderly Person
                            </th>
                            <th>
                                <i class="fas fa-user-md"></i> Assigned To
                            </th>
                            <th>
                                <i class="fas fa-calendar"></i> Scheduled Time
                            </th>
                            <th>
                                <i class="fas fa-clock"></i> Duration
                            </th>
                            <th>
                                <i class="fas fa-exclamation-triangle"></i> Priority
                            </th>
                            <th>
                                <i class="fas fa-info-circle"></i> Status
                            </th>
                            <th>
                                <i class="fas fa-cogs"></i> Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br /><small class="text-muted">@item.Description</small>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ElderlyPerson.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.Name)
                                </td>
                                <td>
                                    @item.ScheduledTime.ToString("MMM dd, HH:mm")
                                </td>
                                <td>
                                    @if (item.DurationMinutes.HasValue)
                                    {
                                        @($"{item.DurationMinutes} min")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not specified</span>
                                    }
                                </td>
                                <td>
                                    @{
                                        string priorityClass;
                                        switch (item.Priority)
                                        {
                                            case ElderlyCareApp.Models.PriorityLevel.Critical:
                                                priorityClass = "bg-danger";
                                                break;
                                            case ElderlyCareApp.Models.PriorityLevel.High:
                                                priorityClass = "bg-warning";
                                                break;
                                            case ElderlyCareApp.Models.PriorityLevel.Medium:
                                                priorityClass = "bg-info";
                                                break;
                                            case ElderlyCareApp.Models.PriorityLevel.Low:
                                                priorityClass = "bg-secondary";
                                                break;
                                            default:
                                                priorityClass = "bg-secondary";
                                                break;
                                        }
                                    }
                                    <span class="badge @priorityClass">@item.Priority</span>
                                </td>
                                <td>
                                    @{
                                        string statusClass;
                                        switch (item.Status)
                                        {
                                            case ElderlyCareApp.Models.TaskStatus.Completed:
                                                statusClass = "bg-success";
                                                break;
                                            case ElderlyCareApp.Models.TaskStatus.InProgress:
                                                statusClass = "bg-warning";
                                                break;
                                            case ElderlyCareApp.Models.TaskStatus.Scheduled:
                                                statusClass = "bg-info";
                                                break;
                                            case ElderlyCareApp.Models.TaskStatus.Overdue:
                                                statusClass = "bg-danger";
                                                break;
                                            case ElderlyCareApp.Models.TaskStatus.Cancelled:
                                            case ElderlyCareApp.Models.TaskStatus.Skipped:
                                                statusClass = "bg-secondary";
                                                break;
                                            default:
                                                statusClass = "bg-secondary";
                                                break;
                                        }
                                    }
                                    <span class="badge @statusClass">@item.Status</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No Task Schedules Found</h3>
        <p class="text-muted">Start by creating the first task schedule.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add First Task
        </a>
    </div>
} 