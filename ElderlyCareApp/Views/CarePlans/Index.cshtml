@model IEnumerable<ElderlyCareApp.Models.CarePlan>

@{
    ViewData["Title"] = "Care Plans";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1><i class="fas fa-clipboard-list"></i> Care Plans</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Care Plan
            </a>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <i class="fas fa-clipboard"></i> Care Plan
                            </th>
                            <th>
                                <i class="fas fa-user"></i> Patient
                            </th>
                            <th>
                                <i class="fas fa-user-md"></i> Care Provider
                            </th>
                            <th>
                                <i class="fas fa-calendar"></i> Duration
                            </th>
                            <th>
                                <i class="fas fa-exclamation-triangle"></i> Priority
                            </th>
                            <th>
                                <i class="fas fa-info-circle"></i> Status
                            </th>
                            <th>
                                <i class="fas fa-percentage"></i> Progress
                            </th>
                            <th>
                                <i class="fas fa-cogs"></i> Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <br /><small class="text-muted">@item.Description</small>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ElderlyPerson.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.Name)
                                </td>
                                <td>
                                    @item.StartDate.ToString("MMM dd, yyyy") - 
                                    @(item.EndDate?.ToString("MMM dd, yyyy") ?? "Ongoing")
                                </td>
                                <td>
                                    @{
                                        string priorityClass;
                                        switch (item.Priority)
                                        {
                                            case ElderlyCareApp.Models.PriorityLevel.Critical:
                                                priorityClass = "bg-danger";
                                                break;
                                            case ElderlyCareApp.Models.PriorityLevel.High:
                                                priorityClass = "bg-warning";
                                                break;
                                            case ElderlyCareApp.Models.PriorityLevel.Medium:
                                                priorityClass = "bg-info";
                                                break;
                                            case ElderlyCareApp.Models.PriorityLevel.Low:
                                                priorityClass = "bg-secondary";
                                                break;
                                            default:
                                                priorityClass = "bg-secondary";
                                                break;
                                        }
                                    }
                                    <span class="badge @priorityClass">@item.Priority</span>
                                </td>
                                <td>
                                    @{
                                        string statusClass;
                                        switch (item.Status)
                                        {
                                            case ElderlyCareApp.Models.CarePlanStatus.Active:
                                                statusClass = "bg-success";
                                                break;
                                            case ElderlyCareApp.Models.CarePlanStatus.OnHold:
                                                statusClass = "bg-warning";
                                                break;
                                            case ElderlyCareApp.Models.CarePlanStatus.Completed:
                                                statusClass = "bg-info";
                                                break;
                                            case ElderlyCareApp.Models.CarePlanStatus.Draft:
                                                statusClass = "bg-secondary";
                                                break;
                                            case ElderlyCareApp.Models.CarePlanStatus.Cancelled:
                                                statusClass = "bg-danger";
                                                break;
                                            default:
                                                statusClass = "bg-secondary";
                                                break;
                                        }
                                    }
                                    <span class="badge @statusClass">@item.Status</span>
                                </td>
                                <td>
                                    @if (item.ProgressPercentage.HasValue)
                                    {
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar" role="progressbar" 
                                                 style="width: @item.ProgressPercentage%;" 
                                                 aria-valuenow="@item.ProgressPercentage" 
                                                 aria-valuemin="0" aria-valuemax="100">
                                                @item.ProgressPercentage%
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not tracked</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
        <h3 class="text-muted">No Care Plans Found</h3>
        <p class="text-muted">Start by creating the first care plan.</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create First Care Plan
        </a>
    </div>
} 