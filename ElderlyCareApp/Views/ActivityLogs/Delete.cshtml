@model ElderlyCareApp.Models.ActivityLog

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this activity log?</h3>
<div>
    <h4>ActivityLog</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Elderly Person</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ElderlyPerson.Name)</dd>
                
                <dt class="col-sm-4">Caregiver</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Name)</dd>
                
                <dt class="col-sm-4">Activity Type</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.ActivityType)</dd>
                
                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Category)</dd>
                
                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>
                
                <dt class="col-sm-4">Start Time</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.StartTime)</dd>
                
                <dt class="col-sm-4">End Time</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EndTime)</dd>
                
                <dt class="col-sm-4">Duration</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.DurationMinutes) minutes</dd>
                
                <dt class="col-sm-4">Location</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Location)</dd>
                
                <dt class="col-sm-4">Energy Level</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EnergyLevel)/10</dd>
                
                <dt class="col-sm-4">Enjoyment Level</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.EnjoymentLevel)/10</dd>
                
                <dt class="col-sm-4">Is Completed</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.IsCompleted)</dd>
            </dl>
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">Notes</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Notes)</dd>
                
                <dt class="col-sm-4">Created At</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedAt)</dd>
                
                <dt class="col-sm-4">Updated At</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdatedAt)</dd>
            </dl>
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
